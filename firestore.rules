rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /users {
      allow read
      match /{user} {
          allow read: if (request.auth.uid != null)
          allow write: if (request.auth.uid != null)
      }
    }
    match /fitbit/{user} {
        allow read
        allow write: if ((request.auth.uid != null))
    }
    match /fitbit/{user}/{document=**} {
        allow read
        allow write: if ((request.auth.uid != null))
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
